<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/verde"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="90dp"
        android:background="#00ff00"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/amarillo"
        app:layout_constraintStart_toEndOf="@+id/azul"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/azul"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="49dp"
        android:background="#0000ff"
        android:text=""
        android:textColor="#FFFFFF"
        app:layout_constraintBaseline_toBaselineOf="@+id/amarillo"
        app:layout_constraintEnd_toEndOf="@+id/roll_button"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/rojo"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="#FF0000"
        android:text=""
        app:layout_constraintBaseline_toBaselineOf="@+id/verde"
        app:layout_constraintEnd_toStartOf="@+id/verde"
        app:layout_constraintStart_toStartOf="@+id/azul" />

    <Button
        android:id="@+id/amarillo"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="#FFFF00	"
        android:text=""
        app:layout_constraintStart_toEndOf="@+id/azul"
        app:layout_constraintTop_toBottomOf="@+id/verde" />

    <Button
        android:id="@+id/start"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="#000000"
        android:text="START"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/azul" />

    <TextView
        android:id="@+id/ronda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="12dp"
        android:text="Ronda: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numRonda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="4dp"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/ronda"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="1dp"
        android:text="Record: "
        app:layout_constraintEnd_toStartOf="@+id/numRecord"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/numRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="67dp"
        android:text="0"
        app:layout_constraintBaseline_toBaselineOf="@+id/record"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/roll_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="628dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textRandom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roll_button" />

</androidx.constraintlayout.widget.ConstraintLayout>