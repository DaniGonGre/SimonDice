<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:duration="1000">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:layout_width="170dp"
            android:layout_height="60dp"
            android:id="@+id/start"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="72dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintHorizontal_bias="0.497" />
        <Constraint
            android:layout_height="150dp"
            android:layout_width="150dp"
            motion:layout_constraintEnd_toStartOf="@+id/verde"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:id="@+id/rojo"
            motion:layout_constraintBottom_toTopOf="@+id/azul"
            motion:layout_constraintHorizontal_bias="0.0" />
        <Constraint
            android:layout_height="150dp"
            android:layout_width="150dp"
            motion:layout_constraintEnd_toStartOf="@+id/amarillo"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="50dp"
            android:id="@+id/azul"
            motion:layout_constraintHorizontal_bias="0.0"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="208dp" />
        <Constraint
            android:layout_height="150dp"
            android:layout_width="150dp"
            motion:layout_constraintStart_toEndOf="@+id/rojo"
            android:id="@+id/verde"
            motion:layout_constraintBottom_toTopOf="@+id/amarillo" />
        <Constraint
            android:layout_height="150dp"
            android:layout_width="150dp"
            motion:layout_constraintStart_toEndOf="@+id/azul"
            android:id="@+id/amarillo"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="208dp" />
        <Constraint
            motion:layout_editor_absoluteY="9dp"
            android:layout_height="26dp"
            motion:layout_editor_absoluteX="384dp"
            android:layout_width="22dp"
            android:id="@+id/textView" />
        <Constraint
            motion:layout_editor_absoluteY="28dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/numRonda"
            motion:layout_constraintStart_toEndOf="@+id/ronda"
            android:layout_marginLeft="79dp"
            android:layout_marginStart="79dp"
            motion:layout_constraintStart_toStartOf="parent" />
        <Constraint
            motion:layout_editor_absoluteY="10dp"
            android:layout_height="wrap_content"
            motion:layout_editor_absoluteX="66dp"
            android:layout_width="wrap_content"
            android:id="@+id/textView3" />
        <Constraint
            motion:layout_editor_absoluteY="28dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/numRecord"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" />
        <Constraint
            motion:layout_editor_absoluteY="28dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/record"
            motion:layout_constraintEnd_toStartOf="@+id/numRecord" />
        <Constraint
            motion:layout_editor_absoluteY="28dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:id="@+id/ronda"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            motion:layout_constraintEnd_toStartOf="@+id/numRonda"
            motion:layout_constraintHorizontal_bias="1.0" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
    </ConstraintSet>
</MotionScene>